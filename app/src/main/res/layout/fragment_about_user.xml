<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutUserFragment">


    <TextView
        android:id="@+id/devNotice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/proceedbutonshape"
        android:fontFamily="@font/yeon_sung"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:text="Developer Notice"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/feedback"
        app:layout_constraintTop_toBottomOf="@+id/feedback" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/panda" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/yeon_sung"
        android:text="Nguyễn văn Thuận"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/phoneUser"
        app:layout_constraintStart_toEndOf="@+id/cardView5"
        app:layout_constraintTop_toTopOf="@+id/cardView5" />

    <TextView
        android:id="@+id/phoneUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="0393332493"
        app:layout_constraintBottom_toBottomOf="@+id/cardView5"
        app:layout_constraintStart_toEndOf="@+id/cardView5"
        app:layout_constraintTop_toBottomOf="@+id/nameUser" />

    <TextView
        android:id="@+id/accInformation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/proceedbutonshape"
        android:fontFamily="@font/yeon_sung"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:text="Account Information"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5" />

    <TextView
        android:id="@+id/myVoucher"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/proceedbutonshape"
        android:fontFamily="@font/yeon_sung"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:text="My Vouchers"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/accInformation"
        app:layout_constraintTop_toBottomOf="@+id/accInformation" />

    <TextView
        android:id="@+id/policies"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/proceedbutonshape"
        android:fontFamily="@font/yeon_sung"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:text="Policies"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/myVoucher"
        app:layout_constraintTop_toBottomOf="@+id/myVoucher" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/proceedbutonshape"
        android:fontFamily="@font/yeon_sung"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:text="Feedback"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/policies"
        app:layout_constraintTop_toBottomOf="@+id/policies" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/yeon_sung"
        android:text="Logout"
        android:textColor="#F44336"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/devNotice" />

</androidx.constraintlayout.widget.ConstraintLayout>